&lt;/span>&lt;/span>&lt;span class="line">&lt;span class="cl">macs2 callpeak -t &lt;span class="nv">$bdir&lt;/span>/aln/bwa/CTCF-C_PE.bwa.bam -f BAMPE -n CTCF-C --outdir peaks_ebv
&lt;/span>&lt;/span>&lt;span class="line">&lt;span class="cl">
&lt;/span>&lt;/span>&lt;span class="line">&lt;span class="cl">&lt;span class="c1">### @REF: hg38&lt;/span>
